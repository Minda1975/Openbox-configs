#!/bin/bash

# Load resources
xrdb -merge .Xresources

#Status bar
   while true; do
    xsetroot -name "Memory $(free -m | grep '^Mem' | awk '{print "total: " $2 "MB used: " $3"MB"}') | Now playing: $(mpc current | tr -d '(:[:digit:])') | Uptime: $(uptime | awk '{print $3}' | tr -d ',') | $( date +"%F %R" )"
    sleep 5s
done &
     
#Apps
setxkbmap -layout "us,lt,ru" -option "grp:ctrl_shift_toggle"
hsetroot -fill ~/.milky.jpg
xsettingsd &
dunst &
xautolock -time 10 -locker 'slock' &

exec dwm
