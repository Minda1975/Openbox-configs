! Load some urxvt plugins
URxvt.perl-ext-common: default,matcher,selection-autotransform

! Open links in firefox on middle click
URxvt.urlLauncher: sensible-browser
URxvt.colorUL: white
! Useful selection stuff from urxvtperl(3)
URxvt.selection-autotransform.0: s/^([^:[:space:]]+):(\\d+):?$/zile +$2 \\Q$1\\E\\x0d/
URxvt.selection.pattern-0: ( at .*? line \\d+[,.])
URxvt.selection-autotransform.1: s/^ at (.*?) line (\\d+)[,.]$/zile +$2 \\Q$1\\E\\x0d/
URxvt*termName: xterm-256color
UXTerm*termName: xterm-256color
XTerm*termName: xterm-256color

